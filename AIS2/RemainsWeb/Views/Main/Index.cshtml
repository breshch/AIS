@model RemainsWeb.Models.RemainsModel

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>

	<link rel="stylesheet" href="~/Content/bootstrap.css" />
	<link rel="stylesheet" href="~/Content/main.css" />
</head>
<body>
	<div class="container">

		<div class="col-md-4 col-md-offset-4 table-indent">
			<h3 class="text-center">Актуальные остатки на:</h3>
			<h4 class="text-center">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</h4>
			<table class="table table-bordered table-condensed">
				<thead>
					<tr class="cost-header">
						<th class="text-center">Сумма</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var remain in Model.CurrentRemains)
					{
						<tr>
							<td class="text-center cost-incoming"><h2>@remain.Value.ToString("N2") @remain.Key</h2></td>
						</tr>
					}
				</tbody>
			</table>
		</div>

		<div class="col-md-8 col-md-offset-2 table-indent">
			<h3 class="text-center">Пояснение</h3>
			<table class="table table-condensed table-bordered ">
				<thead>
					<tr class="cost-header">
						<th class="text-center">Дата</th>
						<th class="text-center">Статья</th>
						<th class="text-center">Сумма</th>
						<th class="text-center">&#164;</th>
						<th class="text-center">Описание</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var cost in Model.CurrentCosts)
					{
						if (cost.IsIncoming)
						{
							<tr class="cost-incoming">
								<td class="text-center">@cost.Date.ToString("dd.MM.yyyy")</td>
								<td class="text-center">@cost.CostItem</td>
								<td><span class="cost-summ">@cost.Summ.ToString("N2")</span></td>
								<td class="text-center">@cost.Currency</td>
								<td class="text-center">@cost.Description</td>
							</tr>
						}
						else
						{
							<tr class="cost-expense">
								<td class="text-center">@cost.Date.ToString("dd.MM.yyyy")</td>
								<td class="text-center">@cost.CostItem</td>
								<td><span class="cost-summ">@cost.Summ.ToString("N2")</span></td>
								<td class="text-center">@cost.Currency</td>
								<td class="text-center">@cost.Description</td>
							</tr>
						}
					}
				</tbody>
			</table>

			<br />
			<br />
		</div>


	</div>
</body>
</html>
