<Window x:Class="AIS_Enterprise_AV.WareHouse.Scheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheme" Height="800" Width="1000">

	<StackPanel Orientation="Horizontal">
		<Grid Margin="20, 40">
				<Canvas x:Name="Surface" MouseMove="Surface_OnMouseMove" MouseLeave="Surface_OnMouseLeave">
				</Canvas>
		</Grid>

		<DataGrid x:Name="TableCells" Margin="500, 0, 0, 0"></DataGrid>
	</StackPanel>
</Window>
