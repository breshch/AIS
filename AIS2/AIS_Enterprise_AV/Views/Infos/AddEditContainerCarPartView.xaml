<Window x:Class="AIS_Enterprise_AV.Views.Infos.AddEditContainerCarPartView"
        x:Name="AddEditCarPartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding AddEditCarPartTitle}" Height="Auto" SizeToContent="Height" Width="300">
    
    <Grid Margin="20, 30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Артукул"/>
            <ComboBox ItemsSource="{Binding CarParts}" DisplayMemberPath="Article" 
                      SelectedItem="{Binding SelectedCarPart}" IsEditable="True"/>
        </StackPanel>
        
        <TextBlock Grid.Row="1" Text="{Binding SelectedDescription}" Margin="0, 10, 0, 0"/>
        
        <StackPanel Grid.Row="2" Margin="0, 10, 0, 0">
            <TextBlock Text="Количество"/>
            <TextBox Text="{Binding CountCarParts}"/>
        </StackPanel>

        <Button Grid.Row="3" Content="{Binding AddEditCarPartName}" Command="{Binding AddEditCarPartCommand}"/>
    </Grid>
</Window>
