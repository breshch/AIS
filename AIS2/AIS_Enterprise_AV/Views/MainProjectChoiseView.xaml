<Window x:Class="AIS_Enterprise_AV.Views.MainProjectChoiseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проекты" SizeToContent="Height" Width="300"
        WindowStartupLocation="CenterScreen"
        x:Name="MainProjectChoiseWindow">

    <Grid Margin=" 20, 30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

		<Button Grid.Row="0" Content="Табель" Command="{Binding MonthTimeSheetCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding MonthTimeSheetVisibility}"/>
		<Button Grid.Row="1" Content="База Фенокс" Command="{Binding RemainsCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding DbFenoxVisibility}"
                Margin="0, 20, 0, 0"/>
		<Button Grid.Row="2" Content="Затраты" Command="{Binding CostsCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding CostsVisibility}"
                Margin="0, 20, 0, 0"/>
		<Button Grid.Row="3" Content="Обработка бух." Command="{Binding ProcessingBookKeepingCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding ProcessingBookKeepingVisibility}"
                Margin="0, 20, 0, 0"/>
		<Button Grid.Row="4" Content="Остатки залог." Command="{Binding RemainsLoanCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding RemainsLoanVisibility}"
                Margin="0, 20, 0, 0"/>
		<Button Grid.Row="5" Content="Отчёты" Command="{Binding ReportsCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding ReportsVisibility}"
                Margin="0, 20, 0, 0"/>
		<Button Grid.Row="6" Content="Админка" Command="{Binding AdminCommand}" CommandParameter="{Binding ElementName=MainProjectChoiseWindow}" Visibility="{Binding AdminVisibility}"
                Margin="0, 20, 0, 0"/>
    </Grid>
</Window>
